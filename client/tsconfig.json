{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]   // so that we can use @ instead of full path while writing import statements. see vite.config.js
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]  /* as we are using VITE, we have to declare in the typrescript*/
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
